{
    "name": "dwarfdk/laravel-meilitools",
    "description": "Additional tools for Laravel Scout integration with MeiliSearch",
    "license": "MIT",
    "keywords": [
        "laravel",
        "scout",
        "meili",
        "meilisearch",
        "meilitools"
    ],
    "type": "library",
    "authors": [
        {
            "name": "Frederik Sauer",
            "email": "fsa@dwarf.dk"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/validation": "^10.0|^11.0|^12.0",
        "meilisearch/meilisearch-php": "^1.0.0"
    },
    "require-dev": {
        "brick/varexporter": "^0.3.8|^0.4.0|^0.5.0|^0.6.0",
        "guzzlehttp/guzzle": "^7.4",
        "http-interop/http-factory-guzzle": "^1.2",
        "illuminate/support": "^10.17|^11.0|^12.0",
        "laravel/pint": "^1.24",
        "laravel/scout": "^9.0|^10.0",
        "nesbot/carbon": "^2.63|^3.8.4",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "php-http/discovery": "^1.12",
        "pestphp/pest": "^2.2|^3.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false,
            "pestphp/pest-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "Dwarf\\MeiliTools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dwarf\\MeiliTools\\Tests\\": "tests"
        }
    },
    "scripts": {
        "pint": "pint --parallel",
        "test": "pest --compact",
        "test-coverage": "pest --compact --coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dwarf\\MeiliTools\\MeiliToolsServiceProvider"
            ]
        }
    },
    "suggest": {
        "brick/varexporter": "Improves readability of console output for index details"
    }
}
